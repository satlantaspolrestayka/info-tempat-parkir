# Environment Variables for Parking System
# Copy this file to .env and update the values

# ===== SYSTEM SETTINGS =====
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
TIMEZONE=Asia/Jakarta

# ===== GITHUB CONFIGURATION =====
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=satlantaspolrestayka
GITHUB_REPO_NAME=ops-ketupat-progo-2026
GITHUB_BRANCH=main

# ===== DATA MANAGEMENT =====
DATA_FILE=data/parkir-data.json
PENDING_UPDATES_FILE=data/pending-updates.json
BACKUP_DIR=data/backups
MAX_BACKUP_FILES=30
AUTO_REFRESH_INTERVAL=30000

# ===== VALIDATION SETTINGS =====
VALIDATION_MODE=strict
MAX_CONSISTENCY_DIFF=5
AUTO_FIX_ENABLED=true
CHECK_INTERVAL=120000

# ===== NOTIFICATION SETTINGS =====
NOTIFICATION_METHOD=console
# Available: console, email, slack, telegram, whatsapp

# Email Settings (if using email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_EMAIL_RECIPIENT=admin@satlantas.jogja.id

# Slack Settings (if using slack)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
SLACK_CHANNEL=#parkir-alerts

# Telegram Settings (if using telegram)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ===== THRESHOLDS =====
UTILIZATION_WARNING=80
UTILIZATION_CRITICAL=95
NO_UPDATE_ALERT_HOURS=2
DATA_RETENTION_DAYS=90

# ===== SECURITY =====
SESSION_TIMEOUT=28800000
ENABLE_AUDIT_LOG=true
ALLOWED_ORIGINS=https://*.github.io,http://localhost:3000

# ===== MONITORING =====
HEALTH_CHECK_INTERVAL=300000
REPORT_GENERATION_TIME=08:00
BACKUP_TIME=00:00

# ===== EMERGENCY CONTACTS =====
EMERGENCY_CONTACT_1=+628112345678
EMERGENCY_CONTACT_2=+628198765432

# ===== FEATURE TOGGLES =====
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_QR_GENERATION=true
ENABLE_EXPORT_REPORTS=true
ENABLE_DARK_MODE=true
